{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-config-prettier"
    ],
	"linterOptions": {
		"exclude": [
			"**/*.spec.*"
		]
	},
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
		"max-classes-per-file": false,
		"no-trailing-whitespace": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}